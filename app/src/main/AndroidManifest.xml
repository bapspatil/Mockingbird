<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bapspatil.mockingbird">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.AlarmsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparency"></activity>
        <activity
            android:name=".ui.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.QuestionsActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".ui.DismissedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparency">

        </activity>
    </application>

</manifest>